<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilneHotel.Views.Klient.KlientDeleteSuccess"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:MobilneHotel.ViewModels.Klient"  
             xmlns:model="clr-namespace:MobilneHotelServiceReference"  
             x:Name="BrowseItemsPage"
             >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand" Orientation="Vertical">
                <Label Text="Pomyślnie usunięto klienta" FontSize="20" />
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Button Text="OK" Command="{Binding IndexRedirect}"  Style="{StaticResource confirmDeleteStyle}" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
</ContentPage.Content>
</ContentPage>